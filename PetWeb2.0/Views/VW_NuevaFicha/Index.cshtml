
@model IEnumerable<PetWeb2._0.Models.VW_NuevaFicha>
<head>
    <title>Home de petweb</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</head>
<body style="background: url(../../Content/Icon/Fondo.jpg ); background-size:100% 100%; background-attachment:fixed; ">

    <div id="Menu" style="background: rgba(0, 0, 0, 0.7);">



        <nav class="navbar navbar-dark " style="background-color:teal;">
            <h2>Sistema Web Veterinario PetWeb</h2>
            <a href="javascript:document.getElementById('logoutForm').submit()" style="color:white;">Cerrar sesión</a>

        </nav>
        <div class="row">
            <div class="col-2 " style="background-color:teal;">
                <div class="list-group" id="list-tab" role="tablist" style="width:110%;">
                    <ul style="list-style:none; " class="dropdown-item">
                        <li>
                            @Html.ActionLink("Home", "Index", "Home", null, new { style = " text-decoration:none; color: white;;" })
                        </li>
                    </ul>
                    <ul style="list-style:none; " class="dropdown-item">
                        <li>
                            @Html.ActionLink("Mascotas", "Index", "VW_NuevaFicha", null, new { style = " text-decoration:none; color: white;;" })
                        </li>
                    </ul>
                    <ul style="list-style:none; " class="dropdown-item">
                        <li>
                            @Html.ActionLink("Nuevo Cliente", "Create", "DueñoMascota", null, new { style = " text-decoration:none; color: white;" })
                        </li>
                    </ul>
                    <ul style="list-style:none; " class="dropdown-item">
                        <li>
                            @Html.ActionLink("Nueva Mascota", "Create", "Mascotas", null, new { style = " text-decoration:none; color: white;" })
                        </li>
                    </ul>
                    <ul style="list-style:none; " class="dropdown-item">
                        <li>
                            @Html.ActionLink("Defunción", "Index", "VW_Defunciones", null, new { style = " text-decoration:none; color: white;" })
                        </li>
                    </ul>
                    <ul style="list-style:none; " class="dropdown-item">
                        <li>
                            @Html.ActionLink("Leyes", "Leyees", "Home", null, new { style = " text-decoration:none; color: white;" })
                        </li>
                    </ul>



                </div>
            </div>
            <div class="col-10">

                @using (Html.BeginForm("Index", "VW_NuevaFicha", FormMethod.Get))
                {
                    <p style="margin-left:200px;">
                        @Html.TextBox("BuscarMascota", ViewBag.CurrentFilter as string)
                        <input type="submit" value="BuscarMascota" class="btn btn-dark" />
                    </p>


                }
                <div class="container">


                    <div class="row">
                        <div class="col-4">
                            <table class="table table-hover ">
                                <thead class=" table-primary ">
                                    <tr>

                                        <th>
                                            @Html.DisplayNameFor(model => model.Nombre)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Apellido)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Rut)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Numero)
                                        </th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="table-secondary">

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nombre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Apellido)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Rut)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Numero)
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="col-1">

                        </div>
                        <div class="col-7">
                            <table class="table table-hover ">
                                <thead class=" table-primary ">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Microchip)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Nombre_Mascota)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Raza)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Sexo)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Tipo)
                                        </th>

                                        <th>
                                            Detalle
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="table-secondary">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Microchip)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nombre_Mascota)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Raza)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Sexo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Tipo)
                                            </td>

                                            <td>
                                                <button type="button" class="btn btn-secondary btn-sm">
                                                    @Html.ActionLink("Ver", "HomeMascota", new { Microchip = item.Microchip })
                                                </button>


                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>









</body>
