<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <link href="~/Content/Estilo.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <style>
        .menu{
            position: relative;
            top:2px;
        }
        #Card {
            border-radius: 12px;
            background: rgba(0, 0, 0, 0.7);
            color: aliceblue;
        }
    </style>
</head>
<body style="background: url(../../Content/Icon/Fondo.jpg)">
    <header style="background-color:dodgerblue; height:80px; padding:12px;  ">

        @Html.Partial("_LoginPartial")
        @if (Request.IsAuthenticated)
        {
            <input type="checkbox" id="check">
            <label for="check"><img src="Content/Icon/Menu.png"></label>

            <nav class="menu">
                <ul>
                    <li>
                        @Html.ActionLink("Pagina Principal ", "Index", "Home", null, new { style = "color:#43EBD9; text-decoration:none;" })
                    </li>
                    <li>
                        @Html.ActionLink("Nueva Ficha Inscripcion", "Create", "DueñoMascota", null, new { style = "color:#43EBD9; text-decoration:none;" })
                    </li>
                    <li>
                        @Html.ActionLink("Ficha Medica Mascota", "Index", "Home", null, new { style = "color:#43EBD9; text-decoration:none;" })
                    </li>

                    <li>
                        @Html.ActionLink("Mascotas", "Index", "VW_NuevaFicha", null, new { style = "color:#43EBD9; text-decoration:none;" })
                    </li>
                    <li>
                        @Html.ActionLink("Defunciones", "Index", "VW_Defunciones", null, new { style = "color:#43EBD9; text-decoration:none;" })
                    </li>
                    <li>
                        <a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a>
                    </li>
                </ul>
            </nav>

        }

    </header>

</body>

<div class="container body-content">
    @RenderBody()
    <hr />
    <footer></footer>
</div>


@RenderSection("scripts", required: false)

</body>
</html>
