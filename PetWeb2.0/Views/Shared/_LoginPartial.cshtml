@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="PositionSal">
                @Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", style = "color:#43EBD9; text-decoration:none;" })
            </li>
        </ul>
    }
}
else
{

    
            <button type="button" class="btn btn-dark" >@Html.ActionLink("Registrarse", "Create", "Veterinarias", routeValues: null, htmlAttributes: new { id = "registerLink", style = "color:#43EBD9; text-decoration:none;" })</button>
            <button type="button" class="btn btn-dark">@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", style = "color:#43EBD9; text-decoration:none;" })</button>
     
}
